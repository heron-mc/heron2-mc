<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>{{htmlTitle}}</title>
    <link rel="stylesheet" href="{{yuiGridsUrl}}">
    <link rel="stylesheet" href="{{projectAssets}}/vendor/prettify/prettify-min.css">
    <link rel="stylesheet" href="{{projectAssets}}/css/main.css" id="site_styles">
    <link rel="icon" href="{{projectAssets}}/favicon.ico">
    <script src="{{yuiSeedUrl}}"></script>

</head>
<body class="yui3-skin-sam" onload="onLoad()">

<div id="doc">
    <div id="hd" class="yui3-g header">
        <div class="yui3-u-3-4">
            <!--
            {{#if projectLogo}}
                <h1><img src="{{projectLogo}}" title="{{projectName}}"></h1>
            {{else}}
                <h1><img src="{{projectAssets}}/css/logo.png" title="{{projectName}}" width="117" height="52"></h1>
            {{/if}}
            -->
            <h1>{{projectName}}</h1>
        </div>
        <div class="yui3-u-1-4 version">
            <em>API Docs for: {{projectVersion}}</em>
        </div>
    </div>
    <div id="bd" class="yui3-g">

        <div class="yui3-u-1-4">
            <div id="docs-sidebar" class="sidebar apidocs">
                {{>sidebar}}
            </div>
        </div>
        <div class="yui3-u-3-4">
            {{>options}}
            <div class="apidocs">
                <div id="docs-main">
                    <div class="content">
{{>layout_content}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="{{projectAssets}}/vendor/prettify/prettify-min.js"></script>
<script>prettyPrint();</script>
<script src="{{projectAssets}}/js/yui-prettify.js"></script>
<script src="{{projectAssets}}/../api.js"></script>
<script src="{{projectAssets}}/js/api-filter.js"></script>
<script src="{{projectAssets}}/js/api-list.js"></script>
<script src="{{projectAssets}}/js/api-search.js"></script>
<script src="{{projectAssets}}/js/apidocs.js"></script>

<script>
var onLoad = function() {
  var css;
  var head;
  var style;
  var stTab;
  var stTabSelected;
  var stUl;
  
  //console.log("onLoad");
  
  css = "";
  css += "h1, h2, h3, h4, h5, h6 { color: #007ea9; }";
  css += "a { color: #007ea9; }";
  //css += "#hd { background: black; }";
  css += "#hd { background: #005A78; }";
  css += "#hd div { color: white; }";
  css += "#hd h1 { color: white; }";
  
  css += ".tabs li:nth-child(1) a:nth-child(1) { background: #007ea9 !important; }";
  css += ".tabs li:nth-child(1) a:nth-child(1) { border-color: #007ea9 !important; }";
  css += ".tabs li:nth-child(2) a:nth-child(1) { visibility: hidden !important; }";
  css += ".tabs { border-color: #007ea9 !important; }";

  stTab = "{ background: #f0f1f8 !important; }";
  stTabSelected = "{ background: #007ea9 !important; border-color: #007ea9 !important; }";
  stUl = "{ border-color: #007ea9 !important; }";

  css += ".api-class-tab.index.yui3-tab.yui3-widget a "+stTab;
  css += ".api-class-tab.index.yui3-tab.yui3-widget.yui3-tab-selected a "+stTabSelected;
  css += ".api-class-tab.methods.yui3-tab.yui3-widget a "+stTab;
  css += ".api-class-tab.methods.yui3-tab.yui3-widget.yui3-tab-selected a "+stTabSelected;
  css += ".api-class-tab.properties.yui3-tab.yui3-widget a "+stTab;
  css += ".api-class-tab.properties.yui3-tab.yui3-widget.yui3-tab-selected a "+stTabSelected;
  css += "ul.api-class-tabs.yui3-tabview-list "+stUl;
  css += "#classdocs .item { border-bottom: 1px solid #007ea9; }";
    
  head = document.head || document.getElementsByTagName("head")[0];
  style = document.createElement("style");
  style.type = "text/css";
  if (style.styleSheet){
    style.styleSheet.cssText = css;
  } else {
    style.appendChild(document.createTextNode(css));
  };
  head.appendChild(style);  
};

</script>
</body>
</html>
